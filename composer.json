{
    "name": "josepostiga/skeleton-php-package",
    "description": "A PHP package skeleton",
    "keywords": ["php", "skeleton", "package"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/josepostiga/skeleton-php-package/issues",
        "source": "https://github.com/josepostiga/skeleton-php-package"
    },
    "authors": [
        {
            "name": "Jos√© Postia",
            "email": "hello@josepostiga.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2.1",
        "phpunit/phpunit": "^11.0",
        "orchestra-testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "JosePostiga\\SkeletonPhpPackge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
